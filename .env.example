# Environment Configuration Template
# Copy this file to .env and fill in your actual values
# DO NOT commit the .env file to version control

# ================================
# Cloudflare Configuration
# ================================

# Your Cloudflare Account ID (found in your Cloudflare dashboard)
CLOUDFLARE_ACCOUNT_ID=your_account_id_here

# Cloudflare API Token with appropriate permissions
# Should have Workers:Edit, Pages:Edit, D1:Edit, R2:Edit permissions
CLOUDFLARE_API_TOKEN=your_api_token_here

# ================================
# Cloudflare D1 Database
# ================================

# D1 Database ID for development environment
# Created through Cloudflare dashboard or wrangler CLI
D1_DATABASE_ID=your_d1_database_id_here

# D1 Database Name
D1_DATABASE_NAME=cultural-archiver-dev

# ================================
# Cloudflare KV Namespaces
# ================================

# KV Namespace ID for session storage
KV_SESSIONS_ID=your_sessions_kv_namespace_id_here

# KV Namespace ID for application cache
KV_CACHE_ID=your_cache_kv_namespace_id_here

# ================================
# Cloudflare R2 Storage
# ================================

# R2 Bucket name for photo storage
R2_BUCKET_NAME=cultural-archiver-photos

# R2 Custom Domain (optional, for direct R2 access)
R2_CUSTOM_DOMAIN=photos.your-domain.com

# ================================
# Backup Configuration
# ================================

# Directory for backup files (optional, defaults to current directory)
BACKUP_OUTPUT_DIR=./backups

# Enable compression for backup archives (default: true)
BACKUP_COMPRESSION=true

# Maximum backup file size in bytes (default: 1GB)
BACKUP_MAX_SIZE=1073741824

# ================================
# Application Configuration
# ================================

# Application environment (development, staging, production)
NODE_ENV=development

# Frontend URL for CORS and redirects
FRONTEND_URL=http://localhost:5173

# Workers URL for API endpoints
WORKERS_URL=http://localhost:8787

# Debug logging level (trace, debug, info, warn, error)
LOG_LEVEL=debug

# ================================
# Development Configuration
# ================================

# Local development port for frontend (Vite default)
FRONTEND_PORT=5173

# Local development port for workers (Wrangler default)
WORKERS_PORT=8787

# Enable hot reloading in development
HOT_RELOAD=true

# ================================
# Database Migration Settings
# ================================

# Migration runner configuration
MIGRATION_TIMEOUT=30000
MIGRATION_BATCH_SIZE=10

# Force remote database execution (production migrations)
# Set to "true" to ensure migrations run against live Cloudflare database
MIGRATE_REMOTE=false

# ================================
# Security Configuration
# ================================

# Secret key for session management and JWT tokens
# Generate with: openssl rand -base64 32
SECRET_KEY=your_secret_key_here

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,https://your-domain.com

# ================================
# Optional: GitHub Integration
# ================================

# GitHub token for automated deployments (if using GitHub Actions)
GITHUB_TOKEN=your_github_token_here

# Repository information
GITHUB_REPOSITORY=funvill/cultural-archiver