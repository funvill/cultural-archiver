{
  "name": "@cultural-archiver/workers",
  "version": "1.0.0",
  "description": "Cloudflare Workers backend for Cultural Archiver",
  "private": true,
  "type": "module",
  "scripts": {
  "dev": "wrangler dev --env development",
  "deploy": "npm run build && wrangler deploy --env production",
  "bundle:templates": "npx tsx ../../scripts/bundle-templates.ts",
  "prebuild": "npm run bundle:templates",
  "pretest": "npm run bundle:templates",
  "build": "npm run build:pages && tsc",
    "build:pages": "tsx scripts/build-pages.ts",
    "type-check": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest --coverage"
  },
  "dependencies": {
    "@cloudflare/workers-types": "^4.20241106.0",
    "@types/dompurify": "^3.0.5",
    "@types/piexifjs": "^1.0.0",
    "dompurify": "^3.2.7",
    "exifr": "^7.1.3",
    "gray-matter": "^4.0.3",
    "hono": "^4.6.0",
    "isomorphic-dompurify": "^2.28.0",
    "marked": "^12.0.2",
    "piexifjs": "^1.0.6",
    "wasm-image-optimization": "^1.3.1",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "miniflare": "^4.20250902.0",
    "tsx": "^4.19.0",
    "typescript": "^5.6.0",
    "vitest": "^3.2.4",
    "vitest-environment-miniflare": "^2.14.4",
    "wrangler": "^4.33.0"
  }
}
