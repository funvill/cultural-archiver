{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Configuration for New Westminster Public Art Registry data collector",
  
  "baseUrl": "https://www.newwestcity.ca",
  
  "endpoints": {
    "artworkIndex": "/public-art-registry",
    "artworkDetail": "/public-art-registry/{slug}",
    "artistDetail": "/public-art-registry/artists/{id}"
  },
  
  "output": {
    "directory": "./output",
    "artworksFile": "artworks.geojson",
    "artistsFile": "artists.json",
    "debugDirectory": "./output/debug/html"
  },
  
  "scraping": {
    "delayBetweenRequestsMs": 500,
    "maxRetries": 3,
    "retryBackoffBaseMs": 2000,
    "retryBackoffMultiplier": 2,
    "requestTimeoutMs": 30000,
    "userAgent": "Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/120.0.0.0 Safari/537.36"
  },
  
  "pagination": {
    "startPage": 1,
    "resultsPerPage": 50
  },
  
  "validation": {
    "expectedArtworkCount": null,
    "requireCoordinates": true,
    "limitArtworks": null
  },
  
  "source": {
    "name": "City of New Westminster Public Art Registry",
    "attribution": "City of New Westminster",
    "url": "https://www.newwestcity.ca/public-art-registry"
  }
}
