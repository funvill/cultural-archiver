{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Configuration for Burnaby Art Gallery data collector",
  
  "baseUrl": "https://collections.burnabyartgallery.ca",
  
  "endpoints": {
    "artworkIndex": "/list?q=&p={page}&ps=200&sort=title_sort%20asc&src_facet=Public%20Art%20Registry",
    "artworkDetail": "/link/{id}",
    "artistDetail": "/list?q=&p=1&ps=&ct=expand&objectType_facet=artist000000|Artist&artist_facet={artistId}"
  },
  
  "output": {
    "directory": "./output",
    "artworksFile": "artworks.geojson",
    "artistsFile": "artists.json"
  },
  
  "scraping": {
    "delayBetweenRequestsMs": 500,
    "maxRetries": 3,
    "retryBackoffBaseMs": 2000,
    "retryBackoffMultiplier": 2,
    "requestTimeoutMs": 30000,
    "userAgent": "Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/120.0.0.0 Safari/537.36"
  },
  
  "pagination": {
    "startPage": 1,
    "resultsPerPage": 200
  },
  
  "validation": {
    "expectedArtworkCount": 114,
    "requireCoordinates": true,
    "limitArtworks": null
  },
  
  "source": {
    "name": "https://burnabyartgallery.ca",
    "attribution": "Burnaby Art Gallery"
  }
}
