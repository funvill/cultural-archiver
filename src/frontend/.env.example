# Frontend Environment Variables
# Copy this file to .env.local and customize for your environment

# API Configuration
VITE_API_BASE_URL=/api
VITE_API_TIMEOUT=30000

# Google Analytics
# Get your tracking ID from https://analytics.google.com/
# Format: G-XXXXXXXXXX
VITE_GA_TRACKING_ID=

# Map Configuration
VITE_MAP_TILE_URL=https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png
VITE_MAP_ATTRIBUTION="&copy; <a href=\"https://www.openstreetmap.org/copyright\">OpenStreetMap</a> contributors"

# Default Location (Vancouver, BC)
VITE_DEFAULT_LATITUDE=49.2827
VITE_DEFAULT_LONGITUDE=-123.1207
VITE_DEFAULT_ZOOM=15

# Photo Upload Configuration
VITE_MAX_PHOTO_SIZE=15728640
VITE_SUPPORTED_PHOTO_TYPES=image/jpeg,image/jpg,image/png,image/webp,image/heic
VITE_MAX_PHOTOS_PER_SUBMISSION=3

# Rate Limiting
VITE_RATE_LIMIT_SUBMISSIONS=60
VITE_RATE_LIMIT_DISCOVERIES=60

# Feature Flags
VITE_ENABLE_GEOLOCATION=true
VITE_ENABLE_PHOTO_COMPRESSION=true
VITE_ENABLE_OFFLINE_SUPPORT=false

# Development Settings
VITE_DEBUG_MODE=false
VITE_MOCK_API=false